<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorDark</item>
        <item name="colorPrimaryDark">@color/colorDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ErrorApperance">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextInputLayoutDesign" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="startIconTint">@color/colorLightGray</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="endIconTint">@color/colorLightGray</item>
        <item name="endIconMode">clear_text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="background">@drawable/text_field_not_active</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="helperText">Required</item>

        <item name="helperTextTextColor">@color/colorWhite</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextAppearance">@style/ErrorApperance</item>
        <item name="hintTextColor">@color/colorWhite</item>
        <item name="android:paddingBottom">10dp</item>

        <item name="helperTextTextAppearance">@style/TextInputLayoutDesign</item>
        <item name="android:background">@drawable/text_field_not_active</item>
    </style>
    <style name="PasswordLayoutDesign" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="startIconTint">@color/colorLightGray</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="passwordToggleEnabled">true</item>
        <item name="passwordToggleTint">@color/colorLightGray</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="background">@drawable/text_field_not_active</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="helperText">Required</item>

        <item name="helperTextTextColor">@color/colorWhite</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextAppearance">@style/ErrorApperance</item>
        <item name="hintTextColor">@color/colorWhite</item>
        <item name="android:paddingBottom">10dp</item>

        <item name="helperTextTextAppearance">@style/TextInputLayoutDesign</item>
        <item name="android:background">@drawable/text_field_not_active</item>
    </style>


    <style name="TextInputHelperTextSize">
        <item name="helperText">Required</item>
        <item name="helperTextEnabled">true</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="MyAutofilledHighlight">


    </style>

    <style name="ButtonStyleForNoInternet">
        <item name="android:backgroundTint">@color/button_color_wifi</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:iconTint">@color/colorWhite</item>

        <item name="iconSize">18sp</item>

        <item name="cornerRadius">100dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ButtonForOpValidation">
        <item name="android:backgroundTint">@color/button_color_otp</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:iconTint">@color/colorWhite</item>

        <item name="iconSize">18sp</item>

        <item name="cornerRadius">100dp</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="ButtonDesignForInvalidOtp">
        <item name="android:backgroundTint">@color/button_color_for_invalid_otp</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:iconTint">@color/colorWhite</item>

        <item name="iconSize">18sp</item>

        <item name="cornerRadius">100dp</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/superDark</item>
    </style>

</resources>